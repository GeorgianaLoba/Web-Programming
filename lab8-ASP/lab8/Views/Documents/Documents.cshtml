
@{
    ViewBag.Title = "Documents";
}

<!DOCTYPE html>
<html>
<head>
    <!-- FIXME jquery -->
    <script src="@Url.Content("~/Scripts/jquery-3.4.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/documents.js")" type="text/javascript"></script>
    <link rel="stylesheet" href="@Url.Content("~/Content/documents.css")">
    <title> Documents </title>
</head>
<body onload="fetchData()">
<input type="button" value="Sign Out" id="signout" /> <!--TODO-->
<section id="data">
    <div id="mydata">
    </div>
</section>
<section id="buttons">
    <input type="button" value="Add Document" id="addbutton">
    <input type="button" value="Delete Selected Document" id="deletebutton">
    <input type="button" value="Update Selected Document" id="updatebutton">
    <input type="button" value="Type Filter " id="filterbutton">
    <input type="text" placeholder="Enter Type Here" id="filterinput">
</section>
<section id="filter">
    <div>
        <form id="filterform">
            <input type="button" value="" id="lastlabel">
            <input type="button" value="" id="lastfilter">
        </form>
    </div>
    <div id="filteredData"> </div>
</section>
<section>
    <form id="addform">
        <label for="author">Author:</label>
        <input type="text" id="author" name="author">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title">
        <label for="numberPages">Number of pages: </label>
        <input type="number" id="numberPages" name="numberPages">
        <label for="type">Type:</label>
        <input type="text" id="type" name="type">
        <label for="format">Format:</label><br>
        <label for="pdf">pdf</label>
        <input type="radio" id="pdf" name="format" value="pdf">
        <label for="doc">doc</label>
        <input type="radio" id="doc" name="format" value="doc">
        <label for="mobi">mobi</label>
        <input type="radio" id="mobi" name="format" value="mobi">
        <label for="epub">epub</label>
        <input type="radio" id="epub" name="format" value="epub">
        <br>
        <input type="button" value="Add Document" id="added">
    </form>
</section>
<section>
    <form id="updateform">
        <label for="docId">DocumentId:</label>
        <input type="number" id="docId" name="docId" readonly="readonly">
        <label for="author">Author:</label>
        <input type="text" id="authorU" name="author">
        <label for="title">Title:</label>
        <input type="text" id="titleU" name="title">
        <label for="numberPages">Number of pages: </label>
        <input type="number" id="numberPagesU" name="numberPages">
        <label for="type">Type:</label>
        <input type="text" id="typeU" name="type">
        <label for="formatU">Format:</label><br>
        <label for="pdf">pdf</label>
        <input type="radio" id="pdfU" name="formatU" value="pdf">
        <label for="doc">doc</label>
        <input type="radio" id="docU" name="formatU" value="doc">
        <label for="mobi">mobi</label>
        <input type="radio" id="mobiU" name="formatU" value="mobi">
        <label for="epub">epub</label>
        <input type="radio" id="epubU" name="formatU" value="epub">
        <br>
        <input type="button" value="Update Document" id="updated">
    </form>
</section>

</body>
</html>